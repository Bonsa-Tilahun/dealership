<%= form_for(@vehicle, html: {class: 'form-horizontal'}) do |f| %>
  <% if @vehicle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@vehicle.errors.count, "error") %> prohibited this vehicle from being saved:</h2>

      <ul>
        <% @vehicle.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :vin, 'VIN', class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :vin, class: "form-control", required: true, size: 17, minlength: 17, maxlength: 17, autofocus: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :year, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :make, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :make, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :model, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :model, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :trim, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :trim, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :asking_price, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :asking_price, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :body_style, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :body_style, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :mileage, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :mileage, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :exterior_color, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :exterior_color, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :interior_color, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :interior_color, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :transmission, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :transmission, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :drivetrain, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :drivetrain, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :engine, class: "col-sm-2 control-label" %>
    <div class="col-sm-4">
      <%= f.text_field :engine, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :options, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :options, size: "60x4", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comments, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :comments, size: "60x4", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-5 text-left">
      <%= link_to 'Cancel', vehicles_path, class: "btn btn-danger" %>
    </div>
    <div class="col-sm-5 text-right">
      <%= f.submit 'Submit', class: "btn btn-default" %>
    </div>
  </div>
<% end %>
